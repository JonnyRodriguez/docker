FROM ubuntu:22.04

ARG TZ=Etc/UTC
ENV DEBIAN_FRONTEND=noninteractive

RUN apt update && apt install -y x11vnc tigervnc-standalone-server tigervnc-common openjfx

#ADD https://download2.interactivebrokers.com/installers/jres/linux-amd64-1.8.0_202.tar.gz /tmp/jre.tar.gz

#ADD https://download2.interactivebrokers.com/installers/tws/stable/tws-stable-linux-x64.sh /tmp
ADD https://download2.interactivebrokers.com/installers/tws/stable-standalone/tws-stable-standalone-linux-x64.sh /tmp/tws-install.sh
RUN cd /tmp && echo "\n\n" | bash tws-install.sh

ENV DISPLAY=:0
ENV VNCPASSWD=prueba

RUN printf >/bin/entrypoint '%s\n' \
    '#!/bin/bash' \
    'echo -e "$VNCPASSWD\n$VNCPASSWD\nn\n" | vncpasswd' \
    'vncserver $DISPLAY -localhost no' \
    'exec "$@"' \
    && printf >/bin/tws '%s\n' \
    '#!/bin/bash' \
    'cd /root/Jts' \
    'while true; do 1019/tws; sleep 2; done' \
    && chmod +x /bin/entrypoint /bin/tws

EXPOSE 5900

WORKDIR /root/Jts

ENTRYPOINT ["/bin/entrypoint"]

CMD ["tws"]
