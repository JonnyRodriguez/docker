FROM debian:stable-slim

ENV PHP_VER=8.3

ENV APACHE_RUN_USER=www-data
ENV APACHE_RUN_GROUP=www-data

ENV APACHE_PID_FILE=/var/run/apache2.pid
ENV APACHE_RUN_DIR=/var/run/apache2
ENV APACHE_LOCK_DIR=/var/lock/apache2
ENV APACHE_LOG_DIR=/var/log/apache2

SHELL ["/bin/bash", "-c"]

RUN apt update && apt upgrade -y \
&& apt -y install lsb-release apt-transport-https ca-certificates wget \
&& wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg \
&& echo "deb https://packages.sury.org/php/ $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/php.list \
&& apt update \
&& apt install -y git jq unzip php$PHP_VER php$PHP_VER-{mbstring,xml,curl,pgsql,mongodb,redis,mysql,mcrypt,opcache,intl,bcmath,yaml,gd} \
&& rm -rf /var/lib/apt/lists/* \
&& wget -qO- https://getcomposer.org/installer | php \
&& mv composer.phar /usr/local/bin/composer

RUN printf >/entry.sh '#!/usr/bin/env bash\n\
[ -f /init.sh ] && bash /init.sh\n\
exec "$@"' \
&& chmod +x /entry.sh && cat /entry.sh \
&& a2enmod rewrite

WORKDIR /var/www/html

CMD /entry.sh apache2 -DFOREGROUND
